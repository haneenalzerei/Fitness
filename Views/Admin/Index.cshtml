@model List<Fitness.Models.Test>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Dashboard_Layout.cshtml";
}
<br />
<br />
<br />
<br />
<div class="container-fluid">
    <p>
        <a onclick="$('#modal').modal('show')" class="btn btn-primary">Add Employee</a>
    </p>

    <div class="modal" tabindex="-1" role="dialog" id="modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Employee </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <form method="post" asp-action="CreateAddEmployee">
                        <div class="form-group">
                            <label for="wieght">Full name</label>
                            <input type="text" class="form-control" id="wieght" name="Fullname">
                        </div>
                        <div class="form-group">
                            <label for="hieght">Phone number</label>
                            <input type="text" class="form-control" id="hieght" name="Phonenumber">
                        </div>
                        <div class="form-group">
                            <label for="hieght">Email</label>
                            <input type="email" class="form-control" id="hieght" name="Email">
                        </div>

                        <div class="form-group">
                            <label for="hieght">Role ID</label>
                            <input type="number" class="form-control" id="hieght" name="Roleid">
                        </div>
                        <br />

                        <button type="submit" class="btn btn-primary">Add Employee</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
               User ID
            </th>
            <th>
                Full Name
            </th>
            
            <th>
                Email
            </th>
            <th>
                Diet Text
            </th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var i  in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => i.Userid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => i.Fullname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => i.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => i.Diettext)
                </td>
               
               
            </tr>
        }
    </tbody>
</table>


